<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elyec.myaplicationaltice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LinearLayoutVerticalActivity" />
        <activity android:name=".LinearLayoutHorizontal" />
        <activity android:name=".RalativeLayoutActivity" />
        <activity android:name=".TableLayoutActivity" />
        <activity android:name=".FrmaLayoutActivity" />
        <activity android:name=".ListViewActivity" />
        <activity android:name=".GridViewActivity" />
        <activity
            android:name=".LauncherActivity"
            android:label="@string/title_activity_launcher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ScrollViewActivity"></activity>
    </application>

</manifest>